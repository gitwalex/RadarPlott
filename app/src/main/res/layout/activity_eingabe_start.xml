<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <fragment
            android:id="@+id/fragmentEingabeSchiff"
            android:name="de.alexanderwinkler.main.FragmentEingabeEigSchiff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_eingabe_eigdaten" />
        <fragment
            android:id="@+id/extendedTabHost"
            android:name="de.alexanderwinkler.div.SimpleTabHost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_eingabe_tabhost" />
        <Button
            android:id="@+id/bWeiter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bWeiter" />
    </LinearLayout>
</ScrollView>